{
  "hosting": [
    {
      "target": "blog",
      "public": "public",
      "headers": [
        {
          "source": "**/*",
          "headers": [
            {
              "key": "X-Content-Type-Options",
              "value": "nosniff"
            },
            {
              "key": "X-Frame-Options",
              "value": "DENY"
            },
            {
              "key": "X-XSS-Protection",
              "value": "1; mode=block"
            }
          ]
        },
        {
          "source": "/",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=180"
            }
          ]
        },
        {
          "source": "/**/*.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=600"
            }
          ]
        },
        {
          "source": "/**/*.@(png|jpg)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, immutable, max-age=31536000"
            }
          ]
        },
        {
          "source": "/feeds/*.xml",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=600"
            }
          ]
        },
        {
          "source": "/*.xml",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=3600, stale-if-error=3600"
            }
          ]
        }
      ],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/favicon.ico",
          "destination": "/theme/favicon.ico"
        },
        {
          "source": "/robots.txt",
          "destination": "/theme/robots.txt"
        }
      ]
    }
  ]
}
