root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4

[*.{js,json,ts}]
indent_style = space
indent_size = 2

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[.remarkrc]
indent_style = space
indent_size = 2

